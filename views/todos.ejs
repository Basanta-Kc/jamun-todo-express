<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <title>Todo App</title>
  </head>
  <body>
    <div class="container mt-2">
      <h1 class="text-center">Todo App</h1>
      <form action="/todos" method="post">
        <div class="row">
          <div
            id="alert-message"
            class="alert alert-danger"
            role="alert"
            style="display: none"
          >
            You cannot submit empty value
          </div>
          <div class="col-10">
            <input
              type="text"
              name="todo"
              id="todo-input-form"
              class="form-control"
              placeholder="You New Todo"
            />
          </div>
          <div class="col-2">
            <button id="add-todo" type="submit" class="btn btn-success w-100">
              Add
            </button>
          </div>
        </div>
      </form>

      <form action="/todos" method="get">
        <div class="row mt-2">
          <div class="col-10">
            <input
              type="text"
              name="searchQueryValue"
              class="form-control"
              placeholder="Search Todos.."
            />
          </div>
          <div class="col-2">
            <button id="search-todo" type="submit" class="btn btn-primary w-100">
              search
            </button>
          </div>
        </div>
      </form>

      <ul class="list-group mt-2" id="todo-container">
        <% todos.forEach((todo) => { %>
        <li
          class="list-group-item d-flex justify-content-between align-items-center"
        >
          <%= todo.name %>
          <a
            href="/todos/edit/<%= todo.id %>"
            class="btn btn-secondary ms-auto me-1"
            >Edit</a
          >
          <form action="/todos/delete/<%= todo.id %>" method="post">
            <button type="submit" class="btn btn-danger">delete</button>
          </form>
        </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
